<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.crudapp.controller.EntityController">
    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Button text="New" onAction="#handleNewEntity"/>
            <TextField fx:id="filterField" promptText="Filter by name"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="entityTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID"/>
                <TableColumn fx:id="nameColumn" text="Name"/>
                <TableColumn fx:id="descriptionColumn" text="Description"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Button text="Previous" onAction="#handlePreviousPage"/>
            <Label fx:id="pageLabel"/>
            <Button text="Next" onAction="#handleNextPage"/>
        </HBox>
    </bottom>
</BorderPane>
